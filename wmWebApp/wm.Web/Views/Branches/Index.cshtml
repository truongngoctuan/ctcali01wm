                            '<a href="' + data["Details"] + '" class="btn btn-info">Chi tiết</a>'
                            + '<a href="' + data["Edit"] + '" class="btn btn-warning">Sửa</a>'
                            + '<a href="' + data["Delete"] + '" class="btn btn-danger">Xóa</a>';
                    }
                }
                ]
            });

